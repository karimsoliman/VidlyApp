@model Vidly.Models.Movie
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var display = Model == null ? "No Movie with this ID" : Model.Name;
}

<h2>@display</h2>

<ul>
    <li>Genre: @Model.Genre.Name</li>
    <li>Release Date: @Model.ReleaseDate.ToShortDateString()</li>
    <li>Date Added: @Model.AddedDate.ToShortDateString()</li>
    <li>Number in Stock: @Model.StockNumber</li>
</ul>
