@model Vidly.ViewModels.RandomMovieVm
@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var nameClass = Model.Customers.Count > 1 ? "popular" : null; 
}

<h2 class="@nameClass">@Model.Movie.Name</h2>

@if (Model.Customers.Count == 0)
{
    <p>This movie is not rented by anyone.</p>
}
else
{
    <ul>
        @foreach (var customer in Model.Customers)
        {
            <li>@customer.Name</li>
        }
    </ul>
}

